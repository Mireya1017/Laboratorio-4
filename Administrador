import java.util.List;

public class Administrador extends Usuario implements IReportable {

    public Administrador(String nombre, String correo) {
        super(nombre, correo, "Administrador");
    }

    @Override
    public void crearContenido(Contenido c) {
        System.out.println(nombre + " creó un nuevo contenido: " + c.getTitulo());
    }

    @Override
    public void editarContenido(Contenido c, String nuevoTitulo) {
        System.out.println(nombre + " editó el contenido: " + c.getTitulo() + " → " + nuevoTitulo);
    }

    public void eliminarContenido(List<Contenido> lista, Contenido c) {
        lista.remove(c);
        System.out.println("Contenido eliminado: " + c.getTitulo());
    }

    @Override
    public void generarReporte() {
        System.out.println("Generando reporte de contenidos publicados...");
    }
}
